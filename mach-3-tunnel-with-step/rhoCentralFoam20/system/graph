FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      sample;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cell;

setFormat       raw;

sets
(
    horizontal_wall 
    {
        type    lineCell;
        axis    xyz;
        start   (x1 y1 z1);
        end     (x2 y2 z2);
    }
);

fields          ( p U T );


